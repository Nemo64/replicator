[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
ij_continuation_indent_size = 4
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = true
ij_wrap_on_typing = false
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_force_semicolon_style = true
ij_typescript_import_sort_members = true
ij_typescript_import_sort_module_name = true
ij_typescript_use_explicit_js_extension = false
ij_any_blank_lines_after_imports = 1
ij_any_keep_blank_lines_in_code = 1

# normal yaml files should be 2 spaces
[{*.yml,*.yaml}]
indent_size = 2
ij_yaml_sequence_on_new_line = true
ij_yaml_block_mapping_on_new_line = true

# in case someone does not have Makefile support in the ide
[Makefile]
indent_style = tab
